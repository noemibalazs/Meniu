<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="26dp"
        android:elevation="6dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:id="@+id/card_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp">

            <TextView
                android:id="@+id/rv_date"
                android:text="@string/data"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/avenirblack"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="35dp" />

            <TextView
                android:id="@+id/menu_soup"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:fontFamily="@font/avenirblack"
                android:gravity="center_vertical"
                android:text="@string/soup"
                android:textColor="@color/colorAccent"
                android:textAppearance="?android:textAppearanceSmall" />

            <RelativeLayout
                android:id="@+id/rv_layout_1"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rv_soup_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/avenirlight"
                    android:text="@string/menu_1"
                    android:textColor="@color/faded_grey"
                    android:textAppearance="?android:textAppearanceLarge" />

                <TextView
                    android:id="@+id/rv_soup_price1"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rv_layout_2"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rv_soup_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/avenirlight"
                    android:text="@string/menu_2"
                    android:textColor="@color/faded_grey"
                    android:textAppearance="?android:textAppearanceLarge" />

                <TextView
                    android:id="@+id/rv_soup_price2"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rv_layout_3"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rv_soup_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/avenirlight"
                    android:text="@string/menu_3"
                    android:textColor="@color/faded_grey"
                    android:textAppearance="?android:textAppearanceLarge" />

                <TextView
                    android:id="@+id/rv_soup_price3"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>


            </RelativeLayout>

            <TextView
                android:id="@+id/main_course"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:fontFamily="@font/avenirblack"
                android:gravity="center_vertical"
                android:text="@string/main_course"
                android:textColor="@color/colorAccent"
                android:textAppearance="?android:textAppearanceSmall"/>


            <RelativeLayout
                android:id="@+id/rv_layout_4"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rv_main_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/avenirlight"
                    android:text="@string/menu_4"
                    android:textColor="@color/faded_grey"
                    android:textAppearance="?android:textAppearanceLarge"/>


                <TextView
                    android:id="@+id/rv_main_price1"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rv_layout_5"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rv_main_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/avenirlight"
                    android:text="@string/menu_5"
                    android:textColor="@color/faded_grey"
                    android:textAppearance="?android:textAppearanceLarge" />

                <TextView
                    android:id="@+id/rv_main_price2"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rv_layout_6"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rv_main_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/avenirlight"
                    android:text="@string/menu_6"
                    android:textColor="@color/faded_grey"
                    android:textAppearance="?android:textAppearanceLarge" />

                <TextView
                    android:id="@+id/rv_main_price3"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/rv_garnituri"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:fontFamily="@font/avenirblack"
                android:gravity="center_vertical"
                android:text="@string/decor"
                android:textColor="@color/colorAccent"
                android:textAppearance="?android:textAppearanceSmall" />

            <RelativeLayout
                android:id="@+id/rv_layout_7"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rv_decor_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/avenirlight"
                    android:text="@string/menu_7"
                    android:textColor="@color/faded_grey"
                    android:textAppearance="?android:textAppearanceLarge" />

                <TextView
                    android:id="@+id/rv_decor_price1"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rv_layout_8"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rv_decor_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/avenirlight"
                    android:text="@string/menu_8"
                    android:textColor="@color/faded_grey"
                    android:textAppearance="?android:textAppearanceLarge" />

                <TextView
                    android:id="@+id/rv_decor_price2"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>



</RelativeLayout>